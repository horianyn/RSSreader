@model RSSreader.ViewModels.AddFeedViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Add Feed</h2>

@using (Html.BeginForm("Create", "Feeds", FormMethod.Get))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Link)
        @Html.TextBoxFor(m => m.Link, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Link)
        @if (TempData["Error"] != null)
        {
        <h5 style="color:red"><strong>@TempData["Error"].ToString()</strong></h5>
}
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Add</button>
}

